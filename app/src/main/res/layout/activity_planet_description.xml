<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".planetDescriptionActivity">

    <ImageView
        android:id="@+id/planet_original_imgView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/moon_original" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/gradient_planet_description"
        app:layout_constraintBottom_toTopOf="@id/planet_description_layout"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/planet_description_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#736AB7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planet_original_imgView">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OVERVIEW"
            android:textColor="#FFF"
            android:id="@+id/overview_txtView"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_regular"/>
        <View
            android:id="@+id/viewDivider"
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:background="#00c6ff"
            android:layout_marginStart="2dp"
            app:layout_constraintTop_toBottomOf="@id/overview_txtView"
            app:layout_constraintStart_toStartOf="@id/overview_txtView"
            android:layout_marginLeft="2dp" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/viewDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/planet_details_txtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    android:textColor="#b6b2df"/>
            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/planet_description_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/planet_original_imgView"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/planet_desc_cardView"
            android:layout_width="0dp"
            android:layout_height="124dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:cardBackgroundColor="#434273"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            android:transitionName="@string/transitionName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/planet_desc_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Mars"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:transitionName="@string/planetNameTransition"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/planet_description_desc_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Milkyway Galaxy"
                    android:textColor="#b6b2df"
                    android:transitionName="@string/planetDescTransition"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="@+id/planet_desc_name"
                    app:layout_constraintStart_toStartOf="@+id/planet_desc_name"
                    app:layout_constraintTop_toBottomOf="@+id/planet_desc_name" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/planet_desc_imgView"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:elevation="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/planet_desc_cardView"
            app:layout_constraintEnd_toEndOf="@+id/planet_desc_cardView"
            app:layout_constraintStart_toStartOf="@+id/planet_desc_cardView"
            android:layout_marginBottom="94dp"
            android:transitionName="@string/planetImageTransition"
            app:srcCompat="@drawable/mars" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>